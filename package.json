{
  "name": "proshop",
  "version": "1.0.0",
  "description": "eCommerce application built with MERN stack",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "build": "rimraf ./dist && npx tsc",
    "start": "npx nodemon",
    "server": "npm run build && nodemon dist/server.js",
    "client": "npm run dev --prefix frontend",
    "dev": "npm-run-all --parallel server client",
    "data:import": "npm run build && node dist/seeder.js -i",
    "data:destroy": "npm run build && node dist/seeder.js -d"
  },
  "author": "RALM",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.2",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "colors": "^1.4.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^36.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
