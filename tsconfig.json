{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["es5", "es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "backend",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["backend"],
  "exclude": ["backend/dist"]
}
